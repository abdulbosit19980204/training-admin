<div class="container">
    <div class="page-title">
        <h3>Users
            <a href="roles.html" class="btn btn-sm btn-outline-primary float-end"><i class="fas fa-user-shield"></i> Roles</a>
            <a href="/add-user" class="btn btn-sm btn-outline-primary float-end mx-2"><i class="fas fa-user-plus"></i> Add user</a>
        </h3>
    </div>
    <div class="box box-primary">
        <div class="box-body">
            <table width="100%" class="table table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Admin</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        {{#each users}}
                    <tr>
                        <td>{{firstName}} {{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{position}}</td>
                        <td>
                            {{#if admin}}
                            <div class="form-check form-switch">
                            {{!-- <label class="form-check-label" for="flexSwitchCheckChecked">Admin</label> --}}
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked disabled>
                            </div>
                            {{else}}
                            <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" >
                            {{!-- <label class="form-check-label" for="flexSwitchCheckChecked">User</label> --}}
                            </div>
                            {{/if}}
                        </td>
                        <td>{{status}}</td>
                        <td class="text-end">
                            <a href="" class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                            <a href="" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                        {{/each}}
                </tbody> 
            </table>
        </div>
    </div>
</div>
