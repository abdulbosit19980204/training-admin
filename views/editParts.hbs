 <div class=" d-block justify-content-center  align-items-center m-0 p-0">
    <div class="col-sm-12 col-lg-6">
        <h3 class="">Edit lessons part</h3><br>
        <form action="/edit-part/{{partData._id}}" method="post" accept-charset="utf-8">
                                <div class="mb-3">
                                    <label for="lessonsTypeName" class="form-label">Part name</label>
                                    <input type="text" value="{{partData.lessonsTypeName}}" name="lessonsTypeName" placeholder="Part name" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <img src="{{partData.lessonsTypeImg}}" alt="" class="col-3 rounded-circle">
                                    <label for="lessonsTypeImg" class="form-label">Old Image</label>
                                    <input type="text" value="{{partData.lessonsTypeImg}}" name="lessonsTypeImg" placeholder="Image link" class="form-control">
                                </div>
                                <div class="mb-3 mt-3">
                                <label for="restaurant" class="form-label">Restaurant</label>
                                <select name="restaurant" class="form-select" required>
                                    {{#if partData.restaurant}}
                                    <option value="{{partData.restaurant}}" selected>{{partData.restaurant}}</option>
                                    {{else}}
                                    <option value="" selected>Select restaurant</option>
                                    {{/if}}
                                    {{#each restaurantList}}
                                    <option value="{{restaurantName}}">{{restaurantName}}</option>
                                    {{/each}}
                                    
                                </select>
                                
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please select a State.</div>
                            </div>
                                <div class="mb-3 mt-3">
                                <label for="restaurant" class="form-label">Kitchen Section</label>
                                <select name="kitchenSection" id="" class="form-select mt-3">
                                    <option value="Sushibar" selected>Sushibar</option>
                                    <option value="Garyachka">Goryachka</option>
                                </select>
                                
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please select a State.</div>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <a href="/parts" class="btn btn-outline-primary">Cancel</a>
                                </div>
        </form> 
    </div>
</div>

            