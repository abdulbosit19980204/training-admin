<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Add Quiz</h3>
        </div>
        {{#if errorAddQuiz}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> {{errorAddQuiz}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        <div class="row">
         
            <div class="col-lg-12">
                <div class="card">
                    {{!-- <div class="card-header">Quiz form</div> --}}
                    <div class="card-body">
                        <form action="/add-quiz" method="post" class="needs-validation" novalidate accept-charset="utf-8">
                            
                            
                            <div class="mb-3">
                                <label for="quizText" class="form-label">Quiz</label>
                                    <textarea name="quizText">
                                    Cleare this and add Quiz details
                                </textarea>
                                
                            </div>
                            <div class="mb-3">
                                <label for="optionA" class="form-label">Option A</label>
                                <input type="text" class="form-control" name="optionA" placeholder="option A" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter A option.</div>
                            </div>
                            <div class="mb-3">
                                <label for="optionB" class="form-label">Option B</label>
                                <input type="text" class="form-control" name="optionB" placeholder="option B" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter B option.</div>
                            </div>
                            <div class="mb-3">
                                <label for="optionC" class="form-label">Option C</label>
                                <input type="text" class="form-control" name="optionC" placeholder="option C" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter C option.</div>
                            </div>
                            <div class="mb-3">
                                <label for="optionD" class="form-label">Option D</label>
                                <input type="text" class="form-control" name="optionD" placeholder="option D" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter D option.</div>
                            </div>
                            <div class="mb-3">
                                <label for="optionD" class="form-label">Answer</label>
                                <input type="text" class="form-control" name="answer" placeholder="Correct answer" required>
                                <div class="valid-feedback">Looks good!</div>
                                <div class="invalid-feedback">Please enter correct option.</div>
                            </div>

                            <div class="row g-2">
                                 <div class="mb-3 col-md-4">
                                    <label for="restaurant" class="form-label">Lesson</label>
                                    <select name="byLesson" class="form-select" required>
                                    {{#each lesson}}
                                        <option value="{{lessonTitle}}">{{lessonTitle}} </option>
                                    {{/each}}
                                    </select>
                                    <div class="valid-feedback">Looks good!</div>
                                    <div class="invalid-feedback">Please select a State.</div>
                                </div>
                                
                                
                                
                                <div class="mb-3 col-md-2">
                                    <label for="zip" class="form-label">Zip code</label>
                                    <input type="text" class="form-control" name="zip" placeholder="00000" required>
                                    <div class="valid-feedback">Looks good!</div>
                                    <div class="invalid-feedback">Please enter a Zip code.</div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="check1" required>
                                    <label class="form-check-label" for="check1">
                                    Check me out
                                    </label>
                                    <div class="invalid-feedback">You must agree before submitting.</div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>