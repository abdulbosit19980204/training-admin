<div class="container">
    <div class="page-title">
        <h3>Lessons
            <a href="roles.html" class="btn btn-sm btn-outline-primary float-end"><i class="fas fa-user-shield"></i> Roles</a>
            <a href="/forms" class="btn btn-sm btn-outline-primary float-end mx-2"><i class="fas fa-plus"></i> Add Lesson</a>
        </h3>
    </div>
    <div class="box box-primary">
        <div class="box-body">
            <table width="100%" class="table table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Part</th>
                        <th>Restaurant</th>
                        <th>Status</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                    </tr>
                </thead>
                <tbody>
                        {{#each lessons}}
                    <tr>
                        <td> <img src="{{lessonimgPath}}" class=" col-8 col-lg-2 rounded-circle" alt="" srcset=""> <span class="fw-bold"> {{lessonTitle}} </span></td>
                        <td>{{lessonPart}}</td>
                        <td>{{restaurant}}</td>
                        <td>
                            {{#if admin}}
                            <div class="form-check form-switch">
                            {{!-- <label class="form-check-label" for="flexSwitchCheckChecked">Admin</label> --}}
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked disabled>
                            </div>
                            {{else}}
                            <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" >
                            {{!-- <label class="form-check-label" for="flexSwitchCheckChecked">User</label> --}}
                            </div>
                            {{/if}}
                        </td>
                        <td>{{formatData createdAt}}</td>
                        <td>{{formatData updatedAt}}</td>
                        <td class="text-end">
                            <a href="/edit-lesson/{{_id}}" class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                            <a href="/remove-lesson/{{_id}}" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                        {{/each}}
                </tbody> 
            </table>
        </div>
    </div>
</div>
