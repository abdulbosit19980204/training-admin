<div class="container">
    <div class="page-title">
        <h3>Users
            <a href="roles.html" class="btn btn-sm btn-outline-primary float-end"><i class="fas fa-user-shield"></i> Roles</a>
            <a href="/add-user" class="btn btn-sm btn-outline-primary float-end mx-2"><i class="fas fa-user-plus"></i> Add user</a>
        </h3>
    </div>
    <div class="box box-primary">
        <div class="box-body">
            <table width="100%" class="table table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Role</th>
                        <th>Admin</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        {{#each users}}
                    <tr>
                        <td>
                            {{#if userImg}}
                            <img src="{{userImg}}" style="width: 50px; height: 50px; border: 3px solid rgb(218, 225, 234);" class=" col-8 col-lg-2 rounded-circle" alt="" srcset=""> <span class="fw-bold"> {{firstName}} {{lastName}}</span></td>
                             {{else}}   
                            <img src="https://st.depositphotos.com/3079665/3991/v/450/depositphotos_39915779-stock-illustration-chef-giving-thumbs-up.jpg" style="width: 50px; height: 50px; border: 3px solid rgb(218, 225, 234);" class=" col-8 col-lg-2 rounded-circle" alt="" srcset=""> <span class="fw-bold"> {{firstName}} {{lastName}}</span></td>
                            {{/if}}
                        <td>{{phoneNumber}}</td>
                        <td>{{position}}</td>
                        <td>
                            {{#ifequal admin 'on'}}
                            <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked disabled>
                            </div>
                            {{else}}
                            <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" disabled >
                            </div>
                            {{/ifequal}}
                        </td>
                            {{#ifequal status 'on'}}
                        <td>
                            <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked disabled>
                            </div>
                        </td>

                        {{else}}
                        <td>
                            <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked"  disabled>
                            </div>
                        </td>
                        {{/ifequal}}
                        <td class="text-end">
                            <a href="/update-user/{{_id}}" class="btn btn-outline-info btn-rounded"><i class="fas fa-pen"></i></a>
                            <a href="/delete-user/{{_id}}" class="btn btn-outline-danger btn-rounded"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                        {{/each}}
                   
                </tbody> 
            </table>
        </div>
    </div>
</div>

     